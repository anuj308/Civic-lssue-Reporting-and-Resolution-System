{
  "expo": {
    "name": "Civic Issue Reporter",
    "slug": "civic-issue-reporter",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "in.gov.jharkhand.civicissue",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to capture photos of civic issues.",
        "NSLocationWhenInUseUsageDescription": "This app needs location access to tag the location of reported issues.",
        "NSLocationAlwaysUsageDescription": "This app needs location access to tag the location of reported issues.",
        "NSMicrophoneUsageDescription": "This app needs microphone access to record voice descriptions of issues."
      }
    },
    "android": {
      "package": "in.gov.jharkhand.civicissue",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-location",
      "expo-camera",
      "expo-av"
    ],
    "extra": {
      "eas": {
        "projectId": "8be59014-12ac-428c-a084-8d2b39aa28de"
      }
    },
    "owner": "anuj308"
  }
}
